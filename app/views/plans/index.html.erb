<div class="wrapper plan-wrap">

      <div class="header">
        <h1>Vos recettes de la semaine</h1>
      </div>

      <div class="tools">
        <span>Végétarien</span>
        <span>Vegan</span>
        <span>Sans gluten</span>
        <span>Thermomix</span>
      </div>



    <div class="plan-randomizer">
      <div class="row">
        <% days = ['lundi', 'mardi', 'mercredi', 'jeudi', 'vendredi'] %>
        <% @recipes.each_with_index do |recipe, index| %>
        <div class="col-12 col-md">
          <div class="day">

          <form>
  <div class="value-button" id="decrease" onclick="decreaseValue()" value="Decrease Value">How many people ? </div>
  <br>
  <input type="number" id="number" value="4" />
  <div class="value-button" id="increase" onclick="increaseValue()" value="Increase Value"></div>
  <br>
</form>
            <h3 class="day-name"><%= days[index] %></h3>
            <%= render 'shared/card', recipe: recipe %>
          </div>
        </div>
        <% end %>
      </div>
    </div>

    <div class="content-randomizer">
      <%= link_to "RandoMiser", plans_path, class: "btn btn--primary randomizer"%>
    </div>
    </p>
    <div class="content-wicked_pdf">
      <span>Exporter le menu de la semaine : </span>
      <span class="btn btn--primary export">
      <%= link_to 'Export', plans_path(@recipes, :format => :pdf) %></span>
    </div>
</div>
